<% flash[:email]                  = resource.errors[:email]&.join(', ')&.downcase %>
<% flash[:password]               = resource.errors[:password]&.join(', ')&.downcase %>
<% flash[:password_confirmation]  = resource.errors[:password_confirmation]&.join(', ')&.downcase %>
<% flash[:current_password]       = resource.errors[:current_password]&.join(', ')&.downcase %>
Turbolinks.clearCache()
Turbolinks.visit("<%= response.location %>", { "action": "replace" })
