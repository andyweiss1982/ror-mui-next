Turbolinks.clearCache()
<% if !user_signed_in? %>
  <% flash[:email]                  = resource.errors[:email] %>
  <% flash[:password]               = resource.errors[:password] %>
  <% flash[:password_confirmation]  = resource.errors[:password_confirmation] %>
<% end %>
Turbolinks.visit("<%= response.location %>", { "action": "replace" })
